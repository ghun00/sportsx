rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 유저 데이터 접근 규칙
    match /users/{userId} {
      allow read, write: if true; // 개발용: 임시로 모든 사용자 허용
    }
    
    // 아티클 데이터 접근 규칙
    match /articles/{articleId} {
      allow read: if true; // 모든 사용자 읽기 가능
      allow write: if true; // 개발용: 임시로 모든 사용자 쓰기 허용
    }
    
    // 좋아요 데이터 접근 규칙
    match /user_likes/{likeId} {
      allow read, write, create: if true; // 개발용: 임시로 모든 사용자 허용
    }
    
    // 카테고리 데이터 접근 규칙
    match /categories/{categoryId} {
      allow read: if true; // 모든 사용자 읽기 가능
      allow write: if true; // 개발용: 임시로 모든 사용자 쓰기 허용
    }
    
    // 관리자 로그 접근 규칙
    match /admin_logs/{logId} {
      allow read, write: if true; // 개발용: 임시로 모든 사용자 허용
    }
  }
}
